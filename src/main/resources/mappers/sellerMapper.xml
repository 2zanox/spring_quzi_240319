<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quzi.lesson04.mapper.SellerMapper">
 	<!-- lesson04 quiz01_1 -->
 	<insert id="insertSeller" parameterType="map">
 		INSERT INTO `seller`
 		(
			`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{nickname}
 			,#{profileImageUrl}
 			,#{temperature}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<!-- lesson04 quiz01_2 -->
 	<select id="selectLatestSeller" resultType="com.quzi.lesson04.domain.Seller">
		SELECT
 			`id`
 			,`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`
		FROM
			`seller`
		ORDER BY `id` DESC
		LIMIT 1
 	</select>
 	
 	<!-- lesson04 quiz01_3 -->
 	<select id="selectLatestSellerById" parameterType="Integer" resultType="com.quzi.lesson04.domain.Seller">
 		SELECT
 			`id`
 			,`nickname`
			,`profileImageUrl`
			,`temperature`
			,`createdAt`
			,`updatedAt`
		FROM
			`seller`
		WHERE
			`id` = #{id}		
		ORDER BY `id` DESC
		LIMIT 1
 	</select>
 </mapper>