<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quzi.booking.mapper.BookingMapper">
 	<!-- select -->
 	<select id="selectBookingList" resultType="com.quzi.booking.domain.Booking">
 		SELECT
 			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
 	</select>
 	
 	<!-- delete -->
 	<delete id="deleteBookingById" parameterType="int">
 		DELETE
 		FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<!-- insert -->
 	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`
 		(
 			`name`			
			, `date`
			, `day`
			, `headcount`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{date}
 			, #{day}
 			, #{headcount}
 			, #{phoneNumber}
 			, '대기중'
 			, NOW()
 			, NOW()
 		)		
 	</insert>
 	
 	<!-- select 예약명단 조회 -->
 	<select id="checkBookingByNamephoneNumber" parameterType="map" resultType="boolean">
 		 SELECT
 			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
		WHERE
		 	`name` = #{name}
		 AND
		 	`phoneNumber` = #{phoneNumber}
 	</select>
 </mapper>